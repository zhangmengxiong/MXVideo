<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mxPlayerRootLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:soundEffectsEnabled="false">

    <FrameLayout
        android:id="@+id/mxSurfaceContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="vertical"
        android:soundEffectsEnabled="false">

        <com.mx.video.views.MXTextureView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </FrameLayout>

    <ProgressBar
        android:id="@+id/mxBottomSeekProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.55"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/mx_bottom_progressbar"
        android:soundEffectsEnabled="false"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/mxPlaceImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        android:soundEffectsEnabled="false" />

    <ProgressBar
        android:id="@+id/mxLoading"
        android:layout_width="@dimen/mx_player_size_icon_width"
        android:layout_height="@dimen/mx_player_size_icon_width"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:indeterminateDrawable="@drawable/mx_progress_loading"
        android:indeterminateTint="@color/mx_player_color_main"
        android:soundEffectsEnabled="false"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mxLoadingTxv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mxLoading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp"
        android:shadowColor="@color/mx_player_color_background"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:soundEffectsEnabled="false"
        android:text="0 Kb/s"
        android:textColor="@color/mx_player_color_main"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mxPlayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="15dp"
        android:soundEffectsEnabled="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/mxPlayPauseImg"
            android:layout_width="@dimen/mx_player_size_icon_width"
            android:layout_height="@dimen/mx_player_size_icon_width"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="centerCrop"
            android:soundEffectsEnabled="false"
            android:src="@drawable/mx_icon_player_play" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mxTopLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mx_player_size_top_layout_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/mx_bg_top"
        android:backgroundTint="@color/mx_player_color_background"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:soundEffectsEnabled="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/mxReturnBtn"
            android:layout_width="@dimen/mx_player_size_top_layout_height"
            android:layout_height="fill_parent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingHorizontal="14dp"
            android:paddingVertical="15dp"
            android:scaleType="centerCrop"
            android:soundEffectsEnabled="false"
            android:src="@drawable/mx_icon_return"
            android:tint="@color/mx_player_color_main"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mxTitleTxv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            android:shadowColor="@color/mx_player_color_background"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:singleLine="true"
            android:soundEffectsEnabled="false"
            android:textColor="@color/mx_player_color_main"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:orientation="vertical"
            android:soundEffectsEnabled="false">

            <com.mx.video.views.MXBatteryImageView
                android:id="@+id/mxBatteryImg"
                android:layout_width="@dimen/mx_player_size_battery_width"
                android:layout_height="@dimen/mx_player_size_battery_height"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="false"
                android:tint="@color/mx_player_color_main" />

            <com.mx.video.views.MXTimeTextView
                android:id="@+id/mxSystemTimeTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingHorizontal="3dp"
                android:paddingVertical="1dp"
                android:shadowColor="@color/mx_player_color_background"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:singleLine="true"
                android:soundEffectsEnabled="false"
                android:textColor="@color/mx_player_color_main"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mxBottomLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mx_player_size_bottom_layout_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mx_bg_bottom"
        android:backgroundTint="@color/mx_player_color_background"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:soundEffectsEnabled="false"
        android:visibility="gone">

        <TextView
            android:id="@+id/mxCurrentTimeTxv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="3dp"
            android:shadowColor="@color/mx_player_color_background"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:soundEffectsEnabled="false"
            android:text="00:00"
            android:textColor="@color/mx_player_color_main"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/mxSeekProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:max="100"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:paddingRight="5dp"
            android:paddingBottom="7dp"
            android:progress="0"
            android:progressDrawable="@drawable/mx_bottom_seek_progress"
            android:soundEffectsEnabled="false"
            android:thumb="@drawable/mx_bottom_seek_thumb"
            android:thumbOffset="5dp" />

        <TextView
            android:id="@+id/mxTotalTimeTxv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="3dp"
            android:shadowColor="@color/mx_player_color_background"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:soundEffectsEnabled="false"
            android:text="00:00"
            android:textColor="@color/mx_player_color_main"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/mxFullscreenBtn"
            android:layout_width="@dimen/mx_player_size_bottom_layout_height"
            android:layout_height="fill_parent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:scaleType="centerInside"
            android:soundEffectsEnabled="false"
            android:src="@drawable/mx_icon_full_screen"
            android:tint="@color/mx_player_color_main" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mxRetryLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="22dp"
        android:paddingVertical="12dp"
        android:soundEffectsEnabled="false"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            android:shadowColor="@color/mx_player_color_background"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:soundEffectsEnabled="false"
            android:text="@string/mx_play_error"
            android:textColor="@color/mx_player_color_main"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/mx_bg_btn_retry"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp"
            android:shadowColor="@color/mx_player_color_background"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:soundEffectsEnabled="false"
            android:text="@string/mx_play_retry"
            android:textColor="@color/mx_player_color_main"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mxReplayLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="22dp"
        android:paddingVertical="12dp"
        android:soundEffectsEnabled="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/mxReplayImg"
            android:layout_width="@dimen/mx_player_size_icon_width"
            android:layout_height="@dimen/mx_player_size_icon_width"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:soundEffectsEnabled="false"
            android:src="@drawable/mx_icon_replay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            android:shadowColor="@color/mx_player_color_background"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:soundEffectsEnabled="false"
            android:text="@string/mx_play_complete_replay"
            android:textColor="@color/mx_player_color_main"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mxQuickSeekLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/mx_bg_float_layout"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="22dp"
        android:paddingVertical="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/mxQuickSeekCurrentTxv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="00:00"
            android:textColor="@color/mx_player_color_main"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="/"
            android:textColor="@color/mx_player_color_main_tint"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mxQuickSeekMaxTxv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="00:00"
            android:textColor="@color/mx_player_color_main_tint"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mxVolumeLightLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/mx_bg_float_layout"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="22dp"
        android:paddingVertical="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/mxVolumeLightTypeTxv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/mx_play_volume"
            android:textColor="@color/mx_player_color_main_tint"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="："
            android:textColor="@color/mx_player_color_main_tint"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mxVolumeLightTxv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="50%"
            android:textColor="@color/mx_player_color_main"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>