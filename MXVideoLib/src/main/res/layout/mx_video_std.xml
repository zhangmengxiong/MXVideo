<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <FrameLayout
        android:id="@+id/mxSurfaceContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/mxPlaceImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/mxLoading"
        android:layout_width="@dimen/mx_player_icon_width"
        android:layout_height="@dimen/mx_player_icon_width"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/mx_progress_loading"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mxPlayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mxPlayPauseImg"
            android:layout_width="@dimen/mx_player_icon_width"
            android:layout_height="@dimen/mx_player_icon_width"
            android:src="@drawable/mx_icon_player_pause" />
    </LinearLayout>
</RelativeLayout>